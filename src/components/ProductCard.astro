---
import { Image } from "@astrojs/image/components";
import { IProduct } from "../data/data";

interface Props {
  props: IProduct;
  width: number;
  height: number;
}

const { width, height, props, ...rest } = Astro.props as Props;
const { image, title } = props;
---

<article {...rest}>
  <Image
    src={`/images/${image}`}
    alt={title}
    width={width}
    height={height}
    format="avif"
    class="pointer-events-none"
  />
  <div class="flex justify-between items-center mt-5">
    <div class="flex flex-col">
      <h3 class="text-base lg:text-2xl font-medium tracking-tighter">
        {title}
      </h3>
      <p>Explore Now!</p>
    </div>
    <img data-arrow src="/images/arrow.png" alt="Arrow" width={31} />
  </div>
</article>

<style lang="scss">
  [data-arrow] {
    transform: translateX(-20px);
    transition: transform 0.35s ease;
  }

  article:hover [data-arrow] {
    transform: none;
  }
</style>

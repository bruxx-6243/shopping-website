---
// import styles
import "../styles/global.css";

// import component
import Head from "../components/Head.astro";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";

interface Props {
  title?: string;
  description: string;
}

const { title = "Fashion Website", description } = Astro.props as Props;
---

<html lang="en">
  <Head {title} {description} />
  <body>
    <Navbar />
    <main>
      <slot />
    </main>
    <Footer />
    <style lang="scss">
      html {
        scroll-behavior: smooth;
      }
    </style>
  </body>
</html>
